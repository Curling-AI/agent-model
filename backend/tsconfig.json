{
  "compilerOptions": {
    "module": "ESNext", // Or "ES2020", "ES2022", etc.
    "target": "ESNext", // Or a suitable target for your Node.js version
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@model/*": ["../model/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
}